{
    "extends": "./tsconfig.json",
    "compilerOptions": {
      "target": "ES2020",
      "module": "ES2020",
      "moduleResolution": "node",
      "outDir": "./dist",
      "rootDir": "./server", // Change this to flatten the output
      "noEmit": false,
      "allowImportingTsExtensions": false,
      "esModuleInterop": true,
      "resolveJsonModule": true
    },
    "include": ["server/**/*"],  // Only include server files
    "exclude": ["node_modules", "client", "**/*.test.ts"]
  }
  